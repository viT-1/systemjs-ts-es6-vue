{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"module": "system",
		"target": "es5",
		"rootDir": ".",
		"outFile": "../dist/bundle.system.js"
	},
	"files": [
		"../dist/vue-class-component.esm.js",
		"../dist/vue-property-decorator.esm.js"
	],
	"include": [
		"../dist/**/*.html.js",
		"**/*.ts"
	],
	"exclude": [
		"**/*.i.ts", // interfaces
		"**/*.node.ts",
		"**/node_modules/*",
		"**/__mocks__/*",
		"**/*.spec.*ts"
	]
}