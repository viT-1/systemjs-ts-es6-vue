{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"module": "system",
		"target": "es5",
		"rootDir": ".",
		"outFile": "../dist/bundle.system.js"
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"**/*.i.ts", // interfaces
		"**/*.node.ts",
		"**/node_modules/*",
		"**/__mocks__/*",
		"jest.setup.ts",
		"**/*.spec.*ts"
	]
}